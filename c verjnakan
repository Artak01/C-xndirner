1.
#include <stdio.h>
#include <stdlib.h>

int max(int *arr, int size){
    
    int max = arr[0];
    for(int i = 0; i < size; ++i){
        if(arr[i] > max){
            max = arr[i];
        }
    }
    return max;

}

int main()
{
    int size = 0;
    printf("Enter the size: ");
    scanf("%d",&size);
    int* arr = (int*)calloc(size,sizeof(int));
    
    for(int i = 0; i < size; ++i){
    printf("Enter element: ");
    scanf("%d",arr + i);
    }
    
    int x = max(arr, size);
    printf("\nMax = %d",x);
    
    free(arr);
    
    return 0;
}


2.
  #include <stdio.h>
#include <stdlib.h>

void scan(int* arr, int size){
    for(int i = 0; i < size; ++i){
    printf("Enter array element: ");
    scanf("%d",arr + i);
    }
}

int main()
{
    int size = 0;
    printf("Enter the size: ");
    scanf("%d",&size);
    int* arr = (int*)calloc(size,sizeof(int));
    int* arr1 = (int*)calloc(size, sizeof(int));
   
    printf("Enter frist array!\n");
    scan(arr, size);
    printf("Enter secnd array!\n");
    scan(arr1, size);
    
    for(int i = 0; i < size; ++i){
        printf("%d * %d = %d\n",arr[i],arr1[i], arr[i] * arr1[i]);
    }
    
    free(arr);
    free(arr1);
    
    return 0;
}

3.
#include <stdio.h>
#include <stdlib.h>
float mij(int*, int);

int main(){

    int size = 0;
    printf("Enter the size: ");
    scanf("%i", &size);
    int* arr = (int*)calloc(size, sizeof(int));
    for(int i = 0; i < size; ++i){
        printf("Enter element: ");
        scanf("%i", &arr[i]);
    }

    printf("Mij = %.2lf\n", mij(arr, size));

    return 0;
}


float mij(int* arr, int size){
    int sum = 0;
    for(int i = 0; i < size; ++i){
        sum += arr[i];
    }
    return sum/size;

}


6.
  #include <stdio.h>

void print(int*, int);
void sort(int*, int);

int main()
{
    int arr[5] = {4,8,2,4,1};
    print(arr, 5);
    sort(arr, 5);
    print(arr, 5);

    return 0;
}

void print(int* arr, int size){
        for(int i = 0; i < size; ++i){
            printf("%d", arr[i]);
        }
        printf("\n");
}

void sort(int* p_arr, int size){
    for(int i = 0; i < size; ++i){
        for(int j = 0; j < size - i; ++j){
            if(*(p_arr + j) > *(p_arr + j + 1)){
            int tmp = *(p_arr + j);
            *(p_arr + j) = *(p_arr + j + 1);
            *(p_arr + j + 1) = tmp;
            }
        }  
     }   

}


11.

#include <stdio.h>
#include <stdlib.h>


int main()
{
   int n = 0;
   printf("n = ");
   scanf("%d", &n);
   int** mat = (int**)calloc(n, sizeof(int*));
   
   for(int i = 0; i < n; ++i){
      mat[i] = (int*)calloc(n, sizeof(int));
   }
   
   for(int i = 0; i < n; ++i){
       for(int j = 0; j < n; ++j){
           mat[i][j] = rand()%10;
       }
    }
   
   for(int i = 0; i < n; ++i){
       for(int j = 0; j < n; ++j){
           printf("%d  ",mat[i][j]);
       }
       printf("\n");
    }
   
   for(int i = 0; i < n; ++i){
      free(mat[i]);
   }
   free(mat);
    
    
    return 0;
}

12.
#include <stdio.h>
#include <stdlib.h>

void scan(int*, int);
int* swap(int*, int, int*, int);

int main()
{
    int size_1 = 0;
    printf("Enter first size: ");
    scanf("%d", &size_1);
    int* arr1 = (int*)calloc(size_1,sizeof(int));
    scan(arr1,size_1);
    
    int size_2 = 0;
    printf("Enter secnd size: ");
    scanf("%d", &size_2);
    int* arr2 = (int*)calloc(size_2,sizeof(int));
    scan(arr2,size_2);
    
    int* new_arr = NULL; 
    new_arr = swap(arr1, size_1, arr2, size_2);    
    for(int i = 0; i < size_1 + size_2; ++i){
        printf("%d ", new_arr[i]);
    }
    return 0;
}


void scan(int* arr, int size){
    for(int i = 0; i < size; ++i){
        printf("Enter array element: ");
        scanf("%d", &arr[i]);
    }


}

int* swap(int* arr1, int s1, int* arr2, int s2){
    int size = s1 + s2;
    int* arr = (int*)calloc(size, sizeof(int));
   
    for(int i = 0; i < s1; ++i){
        arr[i] = arr1[i];
    }
    int k = 0;
    for(int i = s1; i < size; ++i){
        arr[i] = arr2[k];
        k++;
    }
    
    return arr;
}

13.

#include <stdio.h>

void binery(int num)
{
    for(int i = 0; i < 32; ++i)
    {
        if (num >= 0){
            printf("0");
        } else
            printf("1");
        num = num << 1;
    }
    
}

int main()
{
    int num = 0;
    printf("Number: ");
    scanf("%d", &num);
    binery(num);
    printf("\n");

    return 0;
}


